<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="achilles.eatathome.EditProfile"
    android:background="@color/mainbackground">
    <LinearLayout
        android:id="@+id/rlTitle"
        android:background="#fff"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#333"
            android:id="@+id/tvBack"
            android:textSize="13sp"
            android:text="BACK"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

        <TextView
            android:padding="15dp"
            android:id="@+id/tvEP"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="3"
            android:text="Edit Profile"
            android:textColor="#111"
            android:textSize="22sp" />

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#333"
            android:id="@+id/tvSave"
            android:textSize="13sp"
            android:text="SAVE"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <RelativeLayout
        android:elevation="1dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/fullroundcorner">


        <EditText
            android:backgroundTint="#444"
            android:textColor="#444"
            android:textColorHint="#aaa"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:drawableTint="@color/background"
            android:id="@+id/item2"
            android:textSize="15sp"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="5dp"
            android:layout_below="@id/item2"
            android:backgroundTint="#444"
            android:textColor="#444"
            android:textColorHint="#aaa"
            android:paddingLeft="56dp"
            android:paddingBottom="15dp"
            android:drawableTint="@color/background"
            android:id="@+id/item1"
            android:textSize="15sp"
            android:hint="Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView

            android:layout_marginTop="59dp"
            android:textColor="#444"
            android:text="+91 - "
            android:paddingLeft="15dp"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_marginTop="5dp"
            android:layout_below="@id/item1"
            android:backgroundTint="#444"
            android:textColor="#aaa"
            android:textColorHint="#aaa"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"
            android:drawableTint="@color/background"
            android:id="@+id/item3"
            android:textSize="15sp"
            android:hint="agarwal.harshnu@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
        <EditText
            android:fontFamily="sans-serif"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item4"
            android:layout_below="@id/item3"
            android:backgroundTint="#444"
            android:textColor="#aaa"
            android:textColorHint="#aaa"
            android:hint="Change Password"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"/>
        <EditText
            android:fontFamily="sans-serif"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/item5"
            android:layout_below="@id/item4"
            android:backgroundTint="#444"
            android:textColor="#aaa"
            android:textColorHint="#aaa"
            android:hint="Confirm Password"
            android:paddingLeft="20dp"
            android:paddingBottom="15dp"/>
    </RelativeLayout>

</RelativeLayout>

