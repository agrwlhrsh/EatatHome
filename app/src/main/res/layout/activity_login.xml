<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background1"
    tools:context="achilles.eatathome.Login">
    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:id="@+id/lliv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/ivChef"
                    android:src="@drawable/chef3"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    />
            </LinearLayout>

            <EditText
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/upround"
                android:layout_below="@id/lliv"
                android:textSize="17sp"
                android:id="@+id/etEmail"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email Id"
                android:gravity="left"
                android:textColorHint="@color/hintC"
                android:textColor="#000000" />

            <EditText
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:background="@drawable/downround"
                android:textColorHint="@color/hintC"
                android:textColor="#000000"
                android:textSize="17sp"
                android:fontFamily="sans-serif"
                android:layout_below="@+id/etEmail"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:id="@+id/etPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:gravity="left"
                android:inputType="textPassword" />

            <TextView
                android:paddingBottom="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="45dp"
                android:textColor="@color/textC"
                android:textSize="16sp"
                android:id="@+id/tvForPass"
                android:layout_below="@+id/etPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?" />

            <TextView
                android:id="@+id/tvSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:textColor="@color/textC"
                android:layout_marginTop="20dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/tvForPass"
                android:fontFamily="cursive"
                android:textSize="30sp"/>

            <TextView
                android:fontFamily="casual"
                android:textSize="17sp"
                android:layout_marginTop="30dp"
                android:layout_centerInParent="true"
                android:textColor="@color/textC"
                android:layout_below="@+id/tvSignin"
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New User? Register Here!!"
                android:layout_marginBottom="20dp"/>
            <TextView
                android:visibility="gone"
                android:layout_marginTop="15dp"
                android:layout_below="@id/tvSignUp"
                android:textColor="@color/textC"
                android:id="@+id/tvConnect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or Connect with"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>

            <LinearLayout
                android:visibility="gone"
                android:layout_below="@id/tvConnect"
                android:layout_centerHorizontal="true"
                android:id="@+id/llGFB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/gp3"
                    android:id="@+id/ivGoogle"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/fb3"
                    android:id="@+id/ivFb"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
