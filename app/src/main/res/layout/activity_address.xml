<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mainbackground"
    tools:context="achilles.eatathome.Address">
    <LinearLayout
        android:id="@+id/rlTitle"
        android:background="#fff"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="#333"
            android:id="@+id/tvBack"
            android:textSize="13sp"
            android:text="BACK"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_centerHorizontal="true"
            android:textColor="#111"
            android:id="@+id/tvEP"
            android:textSize="22sp"
            android:text="Address"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rlSaveAdd"
        android:padding="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:elevation="2dp"
        android:background="@drawable/fullroundcorner">
        <LinearLayout
            android:padding="2dp"
            android:id="@+id/llMyAdd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:layout_weight="4"
                android:id="@+id/tvSAdd"
                android:textColor="#888"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="My Address"
                android:textSize="14sp"/>
            <TextView
                android:paddingRight="3dp"
                android:gravity="end"
                android:layout_weight="1"
                android:id="@+id/tvEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="EDIT"
                android:textSize="15sp"
                android:textColor="@color/background"/>
        </LinearLayout>
        <EditText
            android:textSize="16sp"
            android:id="@+id/etBuildNo"
            android:backgroundTint="#333"
            android:textColor="#999"
            android:textColorHint="#999"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Building Name / Plot No."
            android:layout_below="@+id/llMyAdd"
            android:layout_alignParentStart="true" />
        <EditText
            android:textSize="16sp"
            android:id="@+id/etLandmark"
            android:layout_below="@id/etBuildNo"
            android:backgroundTint="#333"
            android:textColor="#999"
            android:textColorHint="#999"
            android:layout_marginTop="2dp"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Landmark"/>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_below="@id/etLandmark"
            android:orientation="horizontal"
            android:id="@+id/llAP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="16sp"
                android:id="@+id/etArea"
                android:backgroundTint="#333"
                android:textColor="#999"
                android:textColorHint="#999"
                android:paddingLeft="15dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Area"/>
            <EditText
                android:inputType="number"
                android:id="@+id/etPincode"
                android:textSize="16sp"
                android:hint="Pincode"
                android:backgroundTint="#333"
                android:textColor="#999"
                android:textColorHint="#999"
                android:paddingLeft="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:layout_below="@id/llAP"
            android:orientation="horizontal"
            android:id="@+id/llAddr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="16sp"
                android:id="@+id/etCity"
                android:layout_marginRight="5dp"
                android:backgroundTint="#333"
                android:textColorHint="#999"
                android:textColor="#999"
                android:paddingLeft="15dp"
                android:hint="City"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText

                android:textSize="16sp"
                android:id="@+id/etState"
                android:layout_marginLeft="5dp"
                android:backgroundTint="#333"
                android:textColorHint="#999"
                android:textColor="#999"
                android:paddingLeft="15dp"
                android:hint="State"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>

