<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="achilles.eatathome.Profile">
    <LinearLayout
        android:id="@+id/rlTitle"
        android:background="#fff"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="18dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:textColor="#111"
                android:id="@+id/tvName"
                android:textSize="17sp"
                android:text="Harsh Agarwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvPhone"
                android:textColor="#666"
                android:layout_below="@id/tvName"
                android:textSize="14sp"
                android:text="8101111833"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tvEdit"
            android:textColor="@color/background1"
            android:textSize="16sp"
            android:text="EDIT"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/llSelect"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/ic1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/ivProfile4"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/menu1"/>
            <TextView
                android:textColor="#222"
                android:textSize="8sp"
                android:layout_centerHorizontal="true"
                android:text="MENU"
                android:layout_below="@id/ivProfile4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ic2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/ivProfile3"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/cart1"/>

            <TextView
                android:padding="2dp"
                android:textColor="#222"
                android:textSize="8sp"
                android:layout_centerHorizontal="true"
                android:text="CART"
                android:layout_below="@id/ivProfile3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/ic4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/ivProfile" 
                android:padding="2dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:src="@drawable/profile2"/>
            <TextView
                android:padding="2dp"
                android:textColor="@color/background1"
                android:textSize="10sp"
                android:layout_centerHorizontal="true"
                android:text="PROFILE"
                android:layout_below="@id/ivProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tvLine"
        android:text=" "
        android:background="#555"
        android:layout_above="@id/llSelect"
        android:layout_width="match_parent"
        android:layout_height="0.2dp" />
    <ScrollView
        android:scrollbars="none"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="@color/mainbackground"
        android:paddingTop="2dp"
        android:paddingBottom="0dp"
        android:layout_below="@id/rlTitle"
        android:layout_above="@id/tvLine"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_below="@id/item2"
                android:elevation="1dp"
                android:textColor="#111"
                android:drawableTint="@color/background1"
                android:id="@+id/item1"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/order"
                android:textSize="16sp"
                android:text="    Orders"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/uproundcorner"/>
            <TextView
                android:elevation="1dp"
                android:textColor="#111"
                android:id="@+id/item2"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/wallet"
                android:textSize="16sp"
                android:text="    Wallet"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"/>
            <!--<TextView-->
                <!--android:elevation="1dp"-->
                <!--android:textColor="#111"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_below="@id/item1"-->
                <!--android:id="@+id/item8"-->
                <!--android:gravity="center"-->
                <!--android:textSize="16sp"-->
                <!--android:text="@string/Rs"-->
                <!--android:paddingRight="20dp"-->
                <!--android:layout_marginTop="1dp"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="50dp"-->
                <!--android:background="#fff"/>-->

            <TextView
                android:visibility="gone"
                android:elevation="1dp"
                android:textColor="#111"
                android:drawableTint="@color/background1"
                android:id="@+id/item7"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/gps"
                android:textSize="16sp"
                android:text="    Manage Address"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:layout_below="@+id/item1"
                android:layout_marginTop="1dp"
                android:layout_alignParentStart="true" />
            <TextView
                android:visibility="invisible"
                android:elevation="1dp"
                android:textColor="#111"
                android:drawableTint="@color/background1"
                android:layout_below="@id/item7"
                android:id="@+id/item3"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/issue1"
                android:textSize="16sp"
                android:text="    Issues"
                android:padding="10dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height = "50dp"
                android:background="#fff"/>

            <TextView
                android:visibility="invisible"
                android:elevation="1dp"
                android:textColor="#111"
                android:drawableTint="@color/background1"
                android:layout_below="@id/item3"
                android:id="@+id/item4"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/feedback1"
                android:textSize="16sp"
                android:text="    Feedback"
                android:padding="10dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"/>

            <TextView
                android:visibility="gone"
                android:textColor="#111"
                android:drawableTint="@color/background1"
                android:layout_below="@id/item4"
                android:id="@+id/item5"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/help1"
                android:textSize="16sp"
                android:text="    Help"
                android:padding="10dp"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="2dp"
                android:background="@drawable/roundcorner"/>

            <Button
                android:layout_below="@id/item5"
                android:id="@+id/item6"
                android:gravity="center"
                android:textSize="18sp"
                android:text="LOGOUT"
                android:padding="10dp"
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="@color/background1"
                />
            <TextView
                android:id="@+id/tvCare"
                android:fontFamily="sans-serif"
                android:textStyle="italic"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item6"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="@string/messages"
                android:textSize="13sp"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/tvCare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
